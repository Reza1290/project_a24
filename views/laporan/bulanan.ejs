<%- include('../partials/header__') %>
    <%- include('../partials/sidebar__') %>

    <style>
        .comment-section {
            max-height: 400px; /* Set height to make the modal scrollable if there are many comments */
            overflow-y: auto;
        }
    
        .comment {
            padding: 15px;
            margin-bottom: 10px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #ddd;
        }
    
        .comment .comment-header {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
    
        .comment .comment-header img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }
    
        .comment .comment-header .comment-author {
            font-weight: bold;
            color: #007bff;
        }
    
        .comment .comment-body {
            font-size: 14px;
            color: #333;
        }
    
        .comment .comment-footer {
            font-size: 12px;
            color: #6c757d;
            text-align: right;
        }
    
        .comment hr {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    
        /* Style for Loading State */
        .comment-section p {
            font-style: italic;
            color: #007bff;
        }
    </style>
    

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Laporan Bulanan</h3>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Daftar Laporan Bulanan</h2>
                                <div class="clearfix"></div>
                            </div>

                            <!-- Filter Section -->
                            <div class="x_content">
                                <form id="filterForm" class="form-inline mb-3">
                                    <label for="filterBulan" class="mr-2">Filter Bulan:</label>
                                    <select id="filterBulan" name="filterBulan" class="form-control mr-2">
                                        <option value="" selected>Semua Bulan</option>
                                        <option value="Januari">Januari</option>
                                        <option value="Februari">Februari</option>
                                        <option value="Maret">Maret</option>
                                        <option value="April">April</option>
                                        <option value="Mei">Mei</option>
                                        <option value="Juni">Juni</option>
                                        <option value="Juli">Juli</option>
                                        <option value="Agustus">Agustus</option>
                                        <option value="September">September</option>
                                        <option value="Oktober">Oktober</option>
                                        <option value="November">November</option>
                                        <option value="Desember">Desember</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary">Terapkan</button>
                                    <div id="downloadButton" class="btn btn-success ml-2">Download Excel</div>
                                </form>


                                <!-- Table Section -->
                                <% if (laporan && laporan.length> 0) { %>
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Bulan</th>
                                                <th>Kegiatan</th>
                                                <th>Realisasi Kinerja</th>
                                                <th>Realisasi Anggaran</th>
                                                <th>Status</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% laporan.forEach((laporan, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= laporan.bulan %>
                                                    </td>
                                                    <td>
                                                        <%= laporan.nama_kegiatan || 'N/A' %>
                                                    </td>
                                                    <td>
                                                        <%= laporan.realisasi_kinerja %>
                                                            <%= laporan.satuan_realisasi_kinerja %>
                                                    </td>
                                                    <td>Rp <%= laporan.realisasi_anggaran.toLocaleString('id-ID') %>
                                                    </td>
                                                    <td>
                                                        <%= laporan.status==="DITERIMA" ? 'DITERIMA' :
                                                            laporan.status==="DITOLAK" ? 'DITOLAK' : 'PENDING' %>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-info btn-sm"
                                                            onclick="showCommentModal('<%= laporan.id_laporan_bulanan %>')">Lihat
                                                            Komentar</button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <p class="text-center">Tidak ada data laporan untuk bulan yang dipilih.</p>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal for Comments -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Komentar Laporan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="commentContent" class="comment-section">
                    <p class="text-center">Loading...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
            </div>
        </div>
    </div>
</div>


            </div>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const downloadButton = document.getElementById('downloadButton');

                // Function to get the selected month value
                function getSelectedMonth() {
                    const filterBulan = document.getElementById('filterBulan');
                    const selectedValue = filterBulan.value.trim();
                    console.log("Selected Month: ", selectedValue); // Display the selected value
                    return selectedValue;
                }

                function setSelectedMonthFromParams() {
                    const urlParams = new URLSearchParams(window.location.search);
                    const selectedMonth = urlParams.get('filterBulan');

                    if (selectedMonth) {
                        filterBulan.value = selectedMonth; // Set the dropdown value to the parameter
                    }
                }

                // Add event listener to the download button
                downloadButton.onclick = function (event) {
                    event.preventDefault(); // Prevent default button action (if any)

                    const selectedMonth = getSelectedMonth(); // Get the selected month

                    if (selectedMonth) {
                        // Construct the download URL
                        const downloadUrl = `/laporan/bulanan/download?filterBulan=${encodeURIComponent(selectedMonth)}`;
                        window.location.href = downloadUrl; // Trigger the download by navigating to the URL
                    } else {
                        alert('Please select a month before downloading.');
                    }
                };

                setSelectedMonthFromParams();

            });




        </script>
        <script>

 // Show Comments in Modal
function showCommentModal(id_laporan) {
    const commentContent = document.getElementById('commentContent');
    commentContent.innerHTML = "<p class='text-center'>Loading...</p>";

    fetch(`/laporan/komentar/${id_laporan}`)
        .then((response) => {
            if (!response.ok) {
                throw new Error('Failed to fetch comments');
            }
            return response.json();
        })
        .then((data) => {
            if (data && data.length > 0) {
                const commentsHtml = data.map((comment) => `
                    <div class="comment">
                        <div class="comment-header">
                            <img src="https://www.gravatar.com/avatar/${md5(comment.email)}?d=identicon" alt="Avatar">
                            <span class="comment-author">${comment.nama_user}</span>
                        </div>
                        <div class="comment-body">
                            <p>${comment.komentar}</p>
                        </div>
                        <div class="comment-footer">
                            <small>${new Date(comment.timestamp).toLocaleString()}</small>
                        </div>
                        <hr>
                    </div>
                `).join('');
                commentContent.innerHTML = commentsHtml;
            } else {
                commentContent.innerHTML = '<p class="text-center">Tidak ada komentar untuk laporan ini.</p>';
            }
        })
        .catch((error) => {
            console.error('Error fetching comments:', error);
            commentContent.innerHTML = '<p class="text-center text-danger">Error memuat komentar. Silakan coba lagi nanti.</p>';
        });

    // Show the modal
    $('#commentModal').modal('show');
}

        </script>
